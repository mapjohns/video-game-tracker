<h2>Welcome <%=@user.username%> Here Are the Games You Are Currently Tracking</h2>
<div id="AddButton"><button type="button" onclick="location.href='/games/new'">Add Game to Library!</button></div>
<br>
<div class ="test">
<h3>Not Yet Started</h3>
<ol>
<% @user.games.each do |game| %>
    <%if game.status == "Not Yet Started"%>
    <li><a href = "/games/<%=game.id%>"><%=game.title%></a></li>
    <% end %>
<% end %>
</ol>
</div>
<div class ="test">
<h3>In-Progress</h3>
<ol>
<% @user.games.each do |game| %>
    <%if game.status == "In-Progress"%>
    <li><a href = "/games/<%=game.id%>"><%=game.title%></a></li>
    <% end %>
<% end %>
</ol>
</div>
<div class ="test">
<h3>Completed</h3>
<ol>
<% @user.games.each do |game| %>
    <%if game.status == "Completed"%>
    <li><a href = "/games/<%=game.id%>"><%=game.title%></a></li>
    <% end %>
<% end %>
